- if notice.present?
  .alert.alert-success{data: {autoclose: true}}
    = notice

.btn-group.action-buttons
  %button.btn{data: {click: badge_set_badges_url}}
    = t 'forms.labels.back'
  %button.btn.btn-primary{data: {click:  edit_badge_set_badge_url(@badge.badge_set_id, @badge)}}
    = t 'forms.labels.edit'
  %br
  %br
  = render partial: 'badge', :locals => { :badge => @badge }


