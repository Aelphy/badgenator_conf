- if notice.present?
  .alert.alert-success{data: {autoclose: true}}
    = notice

.row
  = link_to t('views.badges.links.add_member'), new_badge_set_badge_url, class: 'btn btn-large btn-primary pull-right'
%br/

.btn-group.action-buttons
  %button.btn{data: {click: badge_sets_url}}
    = t 'forms.labels.back'

%table.table.table-hover
  %thead
    %tr
      %th Номер

      - %w(surname name company profession).each do |field|
        %th= t(field, scope: 'activerecord.attributes.badge')

      %th &nbsp;
  %tbody
    - @badges.each_with_index do |badge, index|
      %tr
        %td= index + 1
        %td= badge.surname
        %td= badge.name
        %td= badge.company
        %td= badge.profession
        %td
          .btn-group
            %button.btn{data: {click: badge_set_badge_url(badge.badge_set_id, badge)}}= t('forms.labels.see')
            
            %button.btn.dropdown-toggle{'data-toggle' => "dropdown"}
              %span.caret
            
            %ul.dropdown-menu
              %li
                = link_to t('forms.labels.edit'), edit_badge_set_badge_url(badge.badge_set_id, badge)
              %li
                = link_to t('forms.labels.delete'), badge_set_badge_url(badge.badge_set_id, badge), onclick: "alert('O, RLY!?')", method: :delete

=paginate @badges
