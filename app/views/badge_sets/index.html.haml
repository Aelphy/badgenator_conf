- if notice.present?
  .alert.alert-success{data: {autoclose: true}}
    = notice

.row
  = link_to t('views.badge_sets.links.add_set'), new_badge_set_url, class: 'btn btn-large btn-primary pull-right'
%br/

%table.table.table-hover
  %thead
    %tr
      %th= t(:image, scope: 'activerecord.attributes.badge_set') 
 
      %th= t(:name, scope: 'activerecord.attributes.badge_set')

      %th &nbsp;

  %tbody
    - @badge_sets.each do |bs|
      %tr
        %td= image_tag bs.image.thumb.url
        %td= bs.name
        %td
          .btn-group
            %button.btn{data: {click: badge_set_badges_url(bs)}}= t('forms.labels.see')
            %button.btn.dropdown-toggle{'data-toggle' => "dropdown"}
              %span.caret
            
            %ul.dropdown-menu
              %li
                = link_to t('forms.labels.print'), print_bs_url(bs)
              %li
                = link_to t('forms.labels.edit'), edit_badge_set_url(bs)
              %li
                = link_to t('forms.labels.delete'), bs, onclick: "alert('O, RLY!?')", method: :delete
    
=paginate @badge_sets
      
